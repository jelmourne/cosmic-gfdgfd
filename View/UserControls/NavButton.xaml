<UserControl x:Class="cosmic_management_system.View.UserControls.NavButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:cosmic_management_system.View.UserControls"
             mc:Ignorable="d" 
             >
    <Grid>
        <Button Click="Button_Click" Background="Transparent" BorderThickness="0">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Resource/bag.png" Width="20" Margin="0,0,5,0" ></Image>
                <TextBlock Text="Button" FontSize="20" VerticalAlignment="Center"></TextBlock>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
