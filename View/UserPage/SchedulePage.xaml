<Page x:Class="cosmic_management_system.View.UserPage.SchedulePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:cosmic_management_system.View.UserPage"
      mc:Ignorable="d" 
      d:DesignHeight="560" d:DesignWidth="800"
      Title="SchedulePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Viewbox Grid.Row="0" Height="500">
            <Calendar x:Name="Schedule" VerticalAlignment="Center" SelectedDatesChanged="Schedule_SelectedDatesChanged"></Calendar>
        </Viewbox>
        <DataGrid Grid.Row="1" x:Name="Events"></DataGrid>
    </Grid>
</Page>
