<Page x:Class="cosmic_management_system.View.UserPage.ArtistsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:cosmic_management_system.View.UserPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ArtistsPage">

    <Grid>
        <DataGrid x:Name="ArtistList" AutoGenerateColumns="False" GridLinesVisibility="None" ColumnHeaderStyle="">
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="First Name" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Last Name" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Stage" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Date" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Biography" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Address" Width="*"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>
